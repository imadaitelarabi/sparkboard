# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Resend Email Configuration (for invitation emails)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL="SparkBoard <noreply@yourdomain.com>"

# OAuth Providers (Production only)
# Set NEXT_PUBLIC_ENABLE_OAUTH=true in production to enable OAuth sign-in
NEXT_PUBLIC_ENABLE_OAUTH=false
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Optional: Collaboration Services (for future enhancement)
# LIVEBLOCKS_SECRET_KEY=your-liveblocks-secret-key
# NEXT_PUBLIC_LIVEBLOCKS_PUBLIC_KEY=your-liveblocks-public-key